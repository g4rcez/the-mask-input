{
	"name": "the-mask-input",
	"sideEffects": false,
	"version": "3.3.4",
	"description": "A simple way to create inputs with masked values. Works like `<input />`, but apply mask for your values.",
	"author": "g4rcez",
	"readme": "./README.md",
	"license": "MIT",
	"main": "dist/index.js",
	"module": "dist/index.es.js",
	"jsnext:main": "dist/index.es.js",
	"types": "dist/src/index.d.ts",
	"homepage": "https://github.com/g4rcez/the-mask-input",
	"engines": {
		"node": ">=8",
		"npm": ">=4"
	},
	"scripts": {
		"build": "rollup -c --bundleConfigAsCjs",
		"cypress": "cypress open",
		"test": "cypress run",
		"test:unit": "vitest run",
		"dev": "rollup -c --watch --bundleConfigAsCjs",
		"prepare": "pnpm build",
		"format": "prettier --write \"{example,src,tests}/**/*.{js,jsx,ts,tsx}\""
	},
	"peerDependencies": {
		"react": ">= 16.8.3",
		"react-dom": ">= 16.8.3"
	},
	"devDependencies": {
		"@rollup/plugin-babel": "5.2.1",
		"@rollup/plugin-commonjs": "15.0.0",
		"@rollup/plugin-node-resolve": "9.0.0",
		"@rollup/plugin-strip": "2.0.0",
		"@rollup/plugin-typescript": "6.0.0",
		"@rollup/plugin-url": "5.0.1",
		"@types/jest": "26.0.13",
		"@types/node": "20.4.8",
		"@types/react": "18.2.18",
		"@types/react-dom": "18.2.7",
		"babel-core": "6.26.3",
		"babel-jest": "26.3.0",
		"babel-loader": "9.1.3",
		"babel-plugin-module-resolver": "4.0.0",
		"babel-plugin-named-asset-import": "0.3.8",
		"babel-preset-react-app": "10.0.1",
		"babel-runtime": "6.26.0",
		"camelcase": "7.0.1",
		"case-sensitive-paths-webpack-plugin": "2.3.0",
		"cypress": "12.17.3",
		"prettier": "3.0.1",
		"react-is": "18.2.0",
		"rollup": "3.27.2",
		"rollup-plugin-peer-deps-external": "2.2.4",
		"rollup-plugin-terser": "7.0.2",
		"rollup-plugin-typescript2": "0.35.0",
		"tslib": "2.6.1",
		"typescript": "4.8.4",
		"vite": "4.4.8",
		"vitest": "0.34.1"
	},
	"files": [
		"dist"
	]
}
