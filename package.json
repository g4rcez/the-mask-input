{
	"name": "the-mask-input",
	"sideEffects": false,
	"version": "3.3.12",
	"description": "A simple way to create inputs with masked values. Works like `<input />`, but apply mask for your values.",
	"author": "g4rcez",
	"readme": "./README.md",
	"license": "MIT",
	"main": "dist/index.js",
	"module": "dist/index.es.js",
	"jsnext:main": "dist/index.es.js",
	"types": "dist/src/index.d.ts",
	"homepage": "https://github.com/g4rcez/the-mask-input",
	"engines": {
		"node": ">=8",
		"npm": ">=4"
	},
	"scripts": {
		"build": "rollup -c --bundleConfigAsCjs",
		"cypress": "cypress open",
		"test": "cypress run",
		"test:unit": "vitest run",
		"dev": "rollup -c --watch --bundleConfigAsCjs",
		"prepare": "pnpm build",
		"format": "prettier --write \"{example,src,tests}/**/*.{js,jsx,ts,tsx}\""
	},
	"peerDependencies": {
		"react": ">= 16.8.3",
		"react-dom": ">= 16.8.3"
	},
	"devDependencies": {
		"@rollup/plugin-babel": "6.0.4",
		"@rollup/plugin-commonjs": "28.0.1",
		"@rollup/plugin-node-resolve": "15.3.0",
		"@rollup/plugin-strip": "3.0.4",
		"@rollup/plugin-typescript": "12.1.1",
		"@rollup/plugin-url": "8.0.2",
		"@types/jest": "29.5.14",
		"@types/node": "22.8.7",
		"@types/react": "18.3.12",
		"@types/react-dom": "18.3.1",
		"babel-core": "6.26.3",
		"babel-jest": "29.7.0",
		"babel-loader": "9.2.1",
		"babel-plugin-module-resolver": "5.0.2",
		"babel-plugin-named-asset-import": "0.3.8",
		"babel-preset-react-app": "10.0.1",
		"babel-runtime": "6.26.0",
		"camelcase": "8.0.0",
		"case-sensitive-paths-webpack-plugin": "2.3.0",
		"cypress": "13.15.1",
		"prettier": "3.3.3",
		"react-is": "18.3.1",
		"rollup": "4.24.4",
		"rollup-plugin-peer-deps-external": "2.2.4",
		"rollup-plugin-terser": "7.0.2",
		"rollup-plugin-typescript2": "0.36.0",
		"tslib": "2.8.1",
		"typescript": "5.6.3",
		"vite": "5.4.10",
		"vitest": "2.1.4"
	},
	"files": [
		"dist"
	]
}
